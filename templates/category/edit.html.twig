{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <main>

        <div class="mx-auto max-w-screen-2xl p-4 md:p-6 2xl:p-10">

            <div class="mb-6 flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
                <h2 class="text-title-md2 font-bold text-black dark:text-white">
                    Catégorie {{ category.name }}
                </h2>
                <a href="{{ path('app_category') }}">Retour à la liste</a>
            </div>

            {{ form_start(form) }}
            <div class="rounded-sm border border-stroke bg-white px-5 pb-2.5 pt-6 shadow-default dark:border-strokedark dark:bg-boxdark sm:px-7.5 xl:pb-1">
                <div class="max-w-full overflow-x-auto">
                    <div class="mb-4.5 flex flex-col gap-6 xl:flex-row">
                        <div class="w-full xl:w-1/2">
                            {{ form_row(form.name, {'class': 'w-full rounded border-[1.5px] border-stroke bg-transparent px-5 py-3 font-normal text-black outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:text-white dark:focus:border-primary'}) }}
                        </div>

                        <div class="w-full xl:w-1/2">
                            {{ form_row(form.type, {'class': 'w-full rounded border-[1.5px] border-stroke bg-transparent px-5 py-3 font-normal text-black outline-none transition focus:border-primary active:border-primary disabled:cursor-default disabled:bg-whiter dark:border-form-strokedark dark:bg-form-input dark:text-white dark:focus:border-primary'}) }}
                        </div>
                    </div>
                    <div class="mb-4.5 flex flex-col gap-6 xl:flex-row">
                        <div class="w-full xl:w-1/2">
                            {{ form_row(form.submit, {'class': 'flex w-full justify-center rounded bg-primary p-3 font-medium text-white hover:bg-opacity-90'}) }}
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}

        </div>

    </main>
{% endblock %}
